<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Configurazione per il tuo dominio HTTPS -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">qual.udog-wms.it.com</domain>
        <trust-anchors>
            <!-- Trust certificati di sistema (Let's Encrypt) -->
            <certificates src="system" />
            <!-- Trust certificati installati dall'utente -->
            <certificates src="user" />
        </trust-anchors>
    </domain-config>
    
    <!-- Configurazione per localhost (sviluppo) -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
    </domain-config>
    
    <!-- Configurazione base sicura -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </base-config>
</network-security-config>